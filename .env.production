# Application settings
APP_NAME=Fintech Thesis API
ENVIRONMENT=production
DEBUG=false

# Database connection
DB_HOST=postgres
DB_PORT=5432
DB_NAME=thesis_fintech
DB_USER=thesis_admin
DB_PASSWORD=thesis_admin
DB_POOL_MIN_SIZE=1
DB_POOL_MAX_SIZE=10
DB_POOL_TIMEOUT=30.0

# Exposure / domains
CORS_ALLOWED_ORIGINS=https://fintechwallet.it/,https://www.fintechwallet.it/

# Keycloak / OIDC
OIDC_ENABLED=true
OIDC_ISSUER=https://auth.fintechwallet.it/realms/thesis
OIDC_CLIENT_ID=frontend
#OIDC_AUDIENCE=backend
OIDC_JWKS_URL=https://auth.fintechwallet.it/realms/thesis/protocol/openid-connect/certs
OIDC_USER_ID_CLAIM=user_id
OIDC_JWKS_CACHE_TTL_SECONDS=300
OIDC_CLOCK_SKEW_SECONDS=60
OIDC_DEV_DEFAULT_SCOPES=accounts:read transactions:read transactions:write crypto:read payouts:read payouts:write

# Keycloak admin
KC_ADMIN_USER=admin
KC_ADMIN_PASSWORD=admin
KC_HOSTNAME_URL=https://auth.fintechwallet.it/
KC_PROXY_HEADERS=xforwarded

# OTP service
OTP_SERVICE_BASE_URL=http://otp:9000
OTP_SERVICE_TIMEOUT_SECONDS=5.0
OTP_CODE_TTL_SECONDS=60

# OTP delivery microservice
OTP_EMAIL_FROM=no-reply@localhost.localdomain
OTP_SMTP_HOST=mailpit
OTP_SMTP_PORT=1025
OTP_SMTP_USERNAME=
OTP_SMTP_PASSWORD=
OTP_SMTP_USE_TLS=true
OTP_SMTP_USE_SSL=false
OTP_SMS_LOG_FILE=
OTP_SMS_SENDER_ID=Fintech

# CoinCap market data
COINCAP_BASE_URL=https://rest.coincap.io/v3
COINCAP_API_KEY=62636e67537343a53b57a5fc321373ff13f085c6164e85676117032f2065a011
